{
  "name": "MoodTracker Pro - Personal Mood & Wellness Journal",
  "short_name": "MoodTracker Pro",
  "description": "Track, analyze, and understand your emotional well-being with advanced insights and beautiful visualizations",
  "id": "/",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["tabbed", "window-controls-overlay", "standalone", "minimal-ui"],
  "background_color": "#0a0a0a",
  "theme_color": "#00ff88",
  "orientation": "portrait-primary",
  "scope": "./",
  "lang": "en-US",
  "dir": "ltr",
  "categories": ["health", "lifestyle", "productivity"],
  "icons": [
    {
      "src": "./icon-192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "./icon-512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "./icon-192-maskable.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "maskable"
    },
    {
      "src": "./icon-512-maskable.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "./screenshot-mobile.svg",
      "sizes": "540x720",
      "type": "image/svg+xml",
      "form_factor": "narrow",
      "label": "Mobile dashboard view"
    },
    {
      "src": "./screenshot-desktop.svg",
      "sizes": "1024x593",
      "type": "image/svg+xml",
      "form_factor": "wide",
      "label": "Desktop dashboard view"
    }
  ],
  "shortcuts": [
    {
      "name": "Log Mood",
      "short_name": "Log",
      "description": "Quickly log your current mood",
      "url": "./index.html?action=log"
    },
    {
      "name": "View Analytics",
      "short_name": "Analytics",
      "description": "View your mood analytics and insights",
      "url": "./index.html?action=analytics"
    }
  ],
  "share_target": {
    "action": "./index.html?share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text"
    }
  },
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "application/json": [".json"],
        "text/markdown": [".md"],
        "text/plain": [".txt"]
      },
      "icons": [
        {
          "src": "./icon-512.svg",
          "sizes": "512x512",
          "type": "image/svg+xml"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+moodtracker",
      "url": "/?protocol=%s"
    }
  ],
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "note_taking": {
    "new_note_url": "/?action=log"
  },
  "scope_extensions": [
    {
      "origin": "*.moodtracker.app"
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.moodtracker.pro",
      "id": "com.moodtracker.pro"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/moodtracker-pro/id123456789"
    }
  ],
  "prefer_related_applications": false,
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "widgets": [
    {
      "name": "Mood Widget",
      "short_name": "Mood",
      "description": "Quick mood logging widget",
      "tag": "mood-widget",
      "template": "mood-widget",
      "ms_ac_template": "mood-widget-template",
      "data": "/?widget=mood",
      "type": "application/json",
      "screenshots": [
        {
          "src": "./icon-512.svg",
          "sizes": "512x512",
          "label": "Mood Widget Screenshot"
        }
      ],
      "icons": [
        {
          "src": "./icon-512.svg",
          "sizes": "512x512"
        }
      ],
      "auth": false,
      "update": 86400
    }
  ]
}
